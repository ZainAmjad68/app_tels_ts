<div class="container bg-light text-dark">
  <% if (!workOrderDetails || workOrderDetails.length < 1) { %>
  <h3 id="no-data-note">
    You have not submitted any maintenance requests. <br />
    Click <strong>"Add a New Work Order"</strong> to get started.
  </h3>
  <% } else { %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Order #</th>
        <th>Title</th>
        <th>Creation Date</th>
        <th>Location</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% workOrderDetails.forEach(function(workOrder) {%>
      <tr class="<% if (workOrder.status === 'Completed') {%> success <%}%>">
        <td><%=workOrder.authorizationNumber%></td>
        <td><%=workOrder.title%></td>
        <td><%=workOrder.createdWhen%></td>
        <td><%=workOrder.whereLocated%></td>
        <td><%=workOrder.status%></td>
        <td>
          <!-- View Work Order Button -->
          <button
            id="viewButton"
            class="action_btn"
            data-toggle="modal"
            data-target="#displayWorkOrderModal"
            data-workOrderObj="<%= JSON.stringify(workOrder); %>"
          >
            <i class="fa fa-eye"></i>
          </button>
          <!-- Edit Work Order Button -->
          <button
            id="editButton"
            class="action_btn"
            data-toggle="modal"
            data-target="#editWorkOrderModal"
            data-workOrderObj="<%= JSON.stringify(workOrder); %>"
          >
            <i class="far fa-edit"></i>
          </button>
        </td>
      </tr>
      <%});%>
    </tbody>
  </table>
  <% } %>
</div>
